    function addFunction() {
        var node = $('#groupTree').tree('getSelected');
        var groupID = node.id;
        postData('/api/function', { Text: $('#FunctionNameID').val(), Url: $('#UrlID').val(), GroupID: groupID }, function (data, textStatus) {
