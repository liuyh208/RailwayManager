                //});
            }
        });
    }

    function UpdateFunction() {
        var rows = $("#functionDataGrid").datagrid("getChecked");
        if (rows.length == 0) {
            $.messager.alert('提示', '请选择要编辑的功能！', 'warning');
            return;
        }
        else {
        if (rows.length == 1) {
            var row = rows[0];
                $("#UpdateFunctionNameID").val(row.Text);
                $("#UpdateUrlID").val(row.Url);
            }

            $('#UpdateFunctionDialog').show().dialog({
                modal: true,
